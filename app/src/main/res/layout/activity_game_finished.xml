<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameFinishedActivity"
    android:padding="16dp"
    android:background="@drawable/dasdas"
    android:gravity="center">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arbutus"
        android:text="Game finished!"
        android:textColor="#FF9800"
        android:textSize="30sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textView_currentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arbutus"
        android:text="Your score: 12"
        android:layout_gravity="left"
        android:textColor="#FF9800"
        android:textSize="24sp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView_highestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arbutus"
        android:text="Highest score: 22"
        android:layout_gravity="left"
        android:textColor="#FF9800"
        android:textSize="24sp"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="24dp" >

        <Button
            android:id="@+id/buttonRestart"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Restart"
            android:textSize="24sp"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/buttonMenu"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menu"
            android:textSize="24sp"
            app:backgroundTint="#E91E63" />
    </LinearLayout>

</LinearLayout>